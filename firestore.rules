
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Fungsi bantuan untuk memeriksa apakah pengguna sudah login
    function isAuthenticated() {
      return request.auth != null;
    }

    // Aturan untuk koleksi 'users'
    match /users/{userId} {
      // Siapa pun yang sudah login dapat membaca data SEMUA pengguna (untuk halaman status)
      allow read: if isAuthenticated();
      // Tapi, HANYA pemilik dokumen yang dapat menulis/mengubah data mereka sendiri
      allow write: if request.auth.uid == userId;
    }
    
    // Pengguna yang login dapat membaca semua log aktivitas dan membuat log mereka sendiri
    match /user-activity/{activityId} {
      allow read, create: if isAuthenticated();
    }

    // Aturan untuk obrolan
    match /chats/{chatId} {
      allow read, write: if isAuthenticated() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, write: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
    
    // Pengguna yang login dapat mengelola produk
    match /products/{productId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // Pengguna yang login dapat mengelola bundel
    match /bundles/{bundleId} {
      allow read, create, update, delete: if isAuthenticated();
    }
  }
}
