rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Aturan ini mengizinkan semua pengguna yang sudah login (terotentikasi)
    // untuk membaca dan menulis ke semua data di Firestore.
    // Ini adalah pengaturan yang umum untuk tahap pengembangan dan prototipe,
    // tapi perlu diperketat untuk lingkungan produksi.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
