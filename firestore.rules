
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // A user can write to their own document.
      allow write: if request.auth.uid == userId;
      // Any authenticated user can read any user document.
      allow read: if request.auth != null;
    }

    match /user-activity/{activityId} {
      // A user can create their own activity log.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Any authenticated user can read all activity logs.
      allow read: if request.auth != null;
    }

    match /products/{productId} {
      // Authenticated users can read and write products.
      allow read, write: if request.auth != null;
    }
    
    match /chats/{chatId} {
      // Participants can read the chat document.
      allow read: if request.auth.uid in resource.data.participants;
      // Participants can write the chat document.
      allow write: if request.auth.uid in request.resource.data.participants;
    
      // Participants can read/write messages in the subcollection.
      match /messages/{messageId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
